<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:paddingTop="@dimen/spicing_medial_24"
    android:paddingRight="@dimen/spicing_normal_16"
    android:paddingLeft="@dimen/spicing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/nav_header_bg">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/userphoto"
        android:layout_marginTop="@dimen/spicing_normal_16"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >

            <TextView
                android:id="@+id/user_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vovik Tarasov"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/user_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v.n.tarasov@mail.ru"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"/>

    </LinearLayout>
</RelativeLayout>